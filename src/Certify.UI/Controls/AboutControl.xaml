<UserControl
    x:Class="Certify.UI.Controls.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:Certify.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:Certify.Locales;assembly=Certify.Locales"
    d:DesignHeight="387.867"
    d:DesignWidth="817.6"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid Margin="0,0,12,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="190" />
        </Grid.ColumnDefinitions>

        <DockPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="16">

            <TextBlock
                x:Name="lblAppTitle"
                DockPanel.Dock="Top"
                FontSize="24"
                TextWrapping="Wrap"><Run FontFamily="Segoe UI Semibold" Text="Certify the web" /></TextBlock>
            <TextBlock
                x:Name="lblAppVersion"
                Margin="0,8"
                DockPanel.Dock="Top"
                TextWrapping="Wrap"><Run Text="V2.0.201703" /><Run Text="27" /></TextBlock>
            <TextBlock
                x:Name="lblAbout"
                Margin="0,8"
                DockPanel.Dock="Top"
                TextWrapping="Wrap"><Run Text="Copyright Webprofusion Pty Ltd 2015 - 2020" /><LineBreak /><Run Text="https://certifytheweb.com" /></TextBlock>

            <TextBlock
                x:Name="lblRegistrationType"
                DockPanel.Dock="Top"
                FontWeight="Bold"
                Text="{x:Static res:SR.AboutControl_RegistrationTypeLabel}"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="lblRegistrationDetails"
                DockPanel.Dock="Top"
                Style="{StaticResource Instructions}"
                TextWrapping="Wrap"><Run Text="{x:Static res:SR.AboutControl_TrialDetailLabel}" /></TextBlock>
            <Expander Margin="0,16,0,0" Header="Open Source Licenses">
                <ScrollViewer>
                    <TextBlock
                        x:Name="creditLibs"
                        Margin="8"
                        IsEnabled="True"
                        ScrollViewer.CanContentScroll="True"
                        Text="This app makes use of the following Open Source projects. &#xA;&#xA;Please refer to each project website for full license details:&#xA;&#xA;Let's Encrypt:&#xA;&#x9;https://letsencrypt.org&#xA;ACMESharp:&#xA;&#x9;MPL 2.0&#xA;&#x9;https://pkisharp.github.io/ACMESharp-docs/&#xA;Certes: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2018 Certes Project &#xA;&#x9;https://github.com/fszlin/certes &#xA;Newtonsoft Json.Net: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2007 James Newton-King &#xA;&#x9;https://www.newtonsoft.com/json &#xA;Fontawesome.WPF: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2014-2016 charri&#xA;&#x9;https://github.com/charri/Font-Awesome-WPF&#xA;MahApps.Metro: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2016 MahApps &#xA;&#x9;http://mahapps.com/&#xA;ARSoft.Tools.Net: &#xA;&#x9;Apache License 2.0&#xA;&#x9;Copyright (c) 2010-2017 Alexander Reinert&#xA;&#x9;https://github.com/alexreinert/ARSoft.Tools.Net&#xA;Fody: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) Simon Cropp and contributors&#xA;&#x9;https://github.com/Fody/Fody &#xA;LightInject: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2017 Bernhard Richter&#xA;&#x9;https://github.com/seesharper/LightInject&#xA;BouncyCastle: &#xA;&#x9;MIT License&#xA;&#x9;Copyright (c) 2000 - 2017 The Legion of the Bouncy Castle Inc.&#xA;&#x9;http://www.bouncycastle.org&#xA;SignalR: &#x9;&#xA;&#x9;Apache License 2.0&#xA;&#x9;Copyright (c) .NET Foundation.&#xA;&#x9;http://signalr.net/ &#xA;Topshelf: &#xA;&#x9;Apache License 2.0&#xA;&#x9;Copyright 2007-2016 Travis Smith, Chris Patterson, Dru Sellers, Henrik Feldt et al.&#xA;&#x9;http://topshelf-project.com/ "
                        TextWrapping="NoWrap" />
                </ScrollViewer>
            </Expander>
        </DockPanel>

        <Button
            Grid.Column="1"
            Width="151"
            Margin="0,10,29.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="UpdateCheck_Click"
            Content="{x:Static res:SR.AboutControl_CheckForUpdateButton}" />
        <Button
            x:Name="Register"
            Grid.Column="1"
            Width="151"
            Margin="0,105,29.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="{x:Static res:SR.AboutControl_Register}" />

        <Button
            x:Name="ValidateKey"
            Grid.Column="1"
            Width="151"
            Margin="0,137,29.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Button_ApplyRegistrationKey"
            Content="{x:Static res:SR.AboutControl_EnterKey}" />
        <Button
            x:Name="DeactivateInstall"
            Grid.Column="1"
            Width="151"
            Margin="0,168,29.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="DeactivateInstall_Click"
            Content="Deactivate Install" />
        <Button
            x:Name="Help"
            Grid.Column="1"
            Width="151"
            Margin="0,42,29.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Help_Click"
            Content="{x:Static res:SR.AboutControl_Support}" />
        <Button
            x:Name="Feedback"
            Grid.Column="1"
            Margin="9.8,220,29.6,0"
            VerticalAlignment="Top"
            Click="Feedback_Click"
            Content="{x:Static res:SR.AboutControl_SendFeedback}" />
        <fa:ImageAwesome
            x:Name="ServiceConnected"
            Grid.Column="1"
            Width="16"
            Height="23"
            Margin="0,0,29.6,10.2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Foreground="{DynamicResource MahApps.Brushes.Accent}"
            Icon="Chain"
            RenderTransformOrigin="0.453,2.187"
            ToolTip="Service Status" />
    </Grid>
</UserControl>