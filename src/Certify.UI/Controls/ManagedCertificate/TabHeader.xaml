<UserControl
    x:Class="Certify.UI.Controls.ManagedCertificate.TabHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:Certify.UI.Controls.ManagedCertificate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="64"
    d:DesignWidth="200"
    AutomationProperties.Name="{Binding HeaderText}"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel.Style>
            <Style>
                <Setter Property="DockPanel.Background" Value="{DynamicResource MahApps.Brushes.Control.Background}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=(IsSelected)}" Value="true">
                        <Setter Property="DockPanel.Background" Value="{StaticResource MahApps.Brushes.Accent4}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Style>
        <StackPanel Margin="4" Orientation="Vertical">
            <fa:ImageAwesome
                x:Name="TabIcon"
                Width="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="{StaticResource MahApps.Brushes.Accent}"
                Icon="{Binding IconName}" />
            <Label
                x:Name="TabLabel"
                Padding="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding HeaderText}"
                FontSize="11">
                <Label.Style>
                    <Style>
                        <Setter Property="Label.Foreground" Value="{DynamicResource TextBrush}" />
                        <Setter Property="Label.FontWeight" Value="SemiBold" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=IsSelected}" Value="true">
                                <Setter Property="Label.Foreground" Value="{DynamicResource TextBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </StackPanel>
    </DockPanel>
</UserControl>